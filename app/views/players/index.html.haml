.panel.panel-default
  .panel-heading
    .row
      .col-sm-10
        %h2= t('views.players.squad')
      .col-sm-2.text-right
        %br
        %a.btn.btn-sm.btn-primary{:href =>new_player_path}= t('views.players.new')

  %table.table.table-striped.table-vcentered
    %tr
      %th= t('activerecord.attributes.player.name')
      %th= t('activerecord.attributes.player.phone')
      %th= t('activerecord.attributes.player.skype')
      %th= t('activerecord.attributes.player.email')
      %th

    - @players.each do |player|
      %tr
        %td= player.full_name
        %td= player.phone
        %td= player.skype
        %td= player.email
        %td
          .btn-toolbar.text-right
            %a.btn.btn-sm.btn-primary{:href => edit_player_path(player)}= t('views.common.edit')
            %a.btn.btn-sm.btn-danger{:href => player_path(player.id), :data => {:method => :delete, :confirm => 'Are you sure?' }}= t('views.common.delete')